<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/grid_spacing_half"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/grid_spacing"
        android:paddingRight="@dimen/grid_spacing">

        <TextView
            android:id="@+id/jokeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/grid_spacing"
            tools:text="random joke" />

        <TextView
            android:id="@+id/lessonText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/grid_spacing"
            android:layout_marginTop="@dimen/grid_spacing"
            android:textStyle="bold"
            tools:text="lesson number" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/explicit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/grid_spacing"
                android:layout_marginRight="@dimen/grid_spacing"
                android:layout_marginEnd="@dimen/grid_spacing"
                android:text="@string/explicit_tag"
                android:textStyle="italic"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/nerdy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/grid_spacing"
                android:text="@string/nerdy_tag"
                android:textStyle="italic"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>


